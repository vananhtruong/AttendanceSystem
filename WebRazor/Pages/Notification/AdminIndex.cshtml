@page
@model NotificationAdminIndexModel
@{
    ViewData["Title"] = "Notification Management";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-bell me-2"></i>Notification Management</h2>
    <div class="mb-4">
        <form method="post" asp-page-handler="Send" class="row g-3 align-items-center bg-white p-3 rounded-4 shadow-sm">
            <div class="col-md-4">
                <input type="number" name="UserId" class="form-control form-control-lg" placeholder="Enter employee ID..." required />
            </div>
            <div class="col-md-6">
                <input type="text" name="Message" class="form-control form-control-lg" placeholder="Notification message..." required />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-main btn-lg w-100"><i class="bi bi-send me-1"></i> Send</button>
            </div>
        </form>
    </div>
    <div class="row g-4">
        @foreach (var item in Model.Notifications)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card p-3 mb-2 shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-bell-fill fs-3 text-primary me-2"></i>
                        <span class="fw-bold">@item.Message</span>
                    </div>
                    <div class="text-secondary small mb-1">
                        <i class="bi bi-clock me-1"></i>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div>
                        @if (item.IsRead)
                        {
                            <span class="badge bg-success">Read</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Unread</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 