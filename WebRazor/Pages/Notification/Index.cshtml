@page
@model NotificationIndexModel
@{
    ViewData["Title"] = "Notifications";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-bell me-2"></i>Notifications</h2>
    <div class="row g-4">
        @foreach (var item in Model.Notifications)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card p-3 mb-2 shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-bell-fill fs-3 text-primary me-2"></i>
                        <span class="fw-bold">@item.Message</span>
                    </div>
                    <div class="text-secondary small mb-1">
                        <i class="bi bi-clock me-1"></i>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div>
                        @if (item.IsRead)
                        {
                            <span class="badge bg-success">Read</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Unread</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 