@page
@model CorrectionRequestAdminIndexModel
@{
    ViewData["Title"] = "Correction Request Management";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-pencil-square me-2"></i>Correction Request Management</h2>
    <div class="row g-4">
        @foreach (var item in Model.CorrectionRequests)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card p-3 mb-2 shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-person fs-4 text-primary me-2"></i>
                        <span class="fw-bold">@item.UserFullName</span>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-light text-dark">@item.Date.ToString("dd/MM/yyyy")</span>
                        <span class="badge bg-info text-dark ms-2">@item.Reason</span>
                    </div>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(item.EvidenceImageUrl))
                        {
                            <img src="@item.EvidenceImageUrl" alt="evidence" class="img-fluid rounded" style="max-height:80px;" />
                        }
                    </div>
                    <div class="mb-2">
                        @if (item.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (item.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </div>
                    <div class="d-flex gap-2 mt-2">
                        @if (item.Status == "Pending")
                        {
                            <form method="post" asp-page-handler="Approve" asp-route-id="@item.Id" style="display:inline">
                                <button type="submit" class="btn btn-outline-success btn-sm rounded-pill px-3"><i class="bi bi-check-circle"></i> Approve</button>
                            </form>
                            <form method="post" asp-page-handler="Reject" asp-route-id="@item.Id" style="display:inline">
                                <input type="text" name="rejectReason" class="form-control form-control-sm d-inline-block w-auto me-2" placeholder="Reject reason..." required />
                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3"><i class="bi bi-x-circle"></i> Reject</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 