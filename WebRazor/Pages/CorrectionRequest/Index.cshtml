@page
@model CorrectionRequestIndexModel
@{
    ViewData["Title"] = "Correction Request";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-pencil-square me-2"></i>Correction Request</h2>
    <div class="mb-4">
        <form method="post" enctype="multipart/form-data" class="row g-3 align-items-center bg-white p-3 rounded-4 shadow-sm">
            <div class="col-md-4">
                <input type="date" name="Date" class="form-control form-control-lg" required />
            </div>
            <div class="col-md-4">
                <input type="text" name="Reason" class="form-control form-control-lg" placeholder="Correction reason..." required />
            </div>
            <div class="col-md-3">
                <input type="file" name="EvidenceImage" class="form-control" accept="image/*" />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-main btn-lg w-100"><i class="bi bi-send me-1"></i> Submit</button>
            </div>
        </form>
    </div>
    <div class="row g-4">
        @foreach (var item in Model.CorrectionRequests)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card p-3 mb-2 shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-pencil-square fs-3 text-primary me-2"></i>
                        <span class="fw-bold">@item.Date.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-light text-dark">@item.Reason</span>
                    </div>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(item.EvidenceImageUrl))
                        {
                            <img src="@item.EvidenceImageUrl" alt="evidence" class="img-fluid rounded" style="max-height:80px;" />
                        }
                    </div>
                    <div>
                        @if (item.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (item.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                            @if (!string.IsNullOrEmpty(item.RejectReason))
                            {
                                <div class="text-danger small mt-1">Reason: @item.RejectReason</div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 