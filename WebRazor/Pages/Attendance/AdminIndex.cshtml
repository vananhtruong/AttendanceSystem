@page
@model AttendanceAdminIndexModel
@{
    ViewData["Title"] = "Attendance Management";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-clipboard-check me-2"></i>Attendance Management</h2>
    <div class="card p-4">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Employee</th>
                    <th>Date</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Status</th>
                    <th>Hours Worked</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AttendanceRecords)
                {
                    <tr>
                        <td>@item.UserFullName</td>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.CheckInTime.ToString("HH:mm")</td>
                        <td>@item.CheckOutTime?.ToString("HH:mm") ?? "--"</td>
                        <td>
                            <span class="badge bg-light text-dark">@item.Status</span>
                        </td>
                        <td>@item.HoursWorked</td>
                        <td>
                            <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" class="d-inline-flex align-items-center gap-2">
                                <select name="Status" class="form-select form-select-sm rounded-pill">
                                    <option value="OnTime" selected="@(item.Status == "OnTime" ? "selected" : null)">On Time</option>
                                    <option value="Late" selected="@(item.Status == "Late" ? "selected" : null)">Late</option>
                                    <option value="Absent" selected="@(item.Status == "Absent" ? "selected" : null)">Absent</option>
                                </select>
                                <button type="submit" class="btn btn-outline-primary btn-sm rounded-pill px-3"><i class="bi bi-save"></i> Update</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 