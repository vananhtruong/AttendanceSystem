@page
@model WorkScheduleAdminIndexModel
@{
    ViewData["Title"] = "Work Schedule Management";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-4">
    <h2 class="fw-bold mb-4"><i class="bi bi-calendar-check me-2"></i>Work Schedule Management</h2>
    <div class="mb-4">
        <a href="/WorkSchedule/Create" class="btn btn-main btn-lg"><i class="bi bi-plus-circle me-1"></i> Add Work Schedule</a>
    </div>
    <div class="card p-4">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Employee</th>
                    <th>Shift</th>
                    <th>Date</th>
                    <th>Overtime</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WorkSchedules)
                {
                    <tr>
                        <td>@item.UserFullName</td>
                        <td>@item.WorkShiftName</td>
                        <td>@item.WorkDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.IsOvertime)
                            {
                                <span class="badge bg-warning text-dark">Overtime</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Normal</span>
                            }
                        </td>
                        <td><span class="badge bg-light text-dark">@item.Status</span></td>
                        <td>
                            <a href="/WorkSchedule/Edit/@item.Id" class="btn btn-outline-primary btn-sm rounded-pill px-3"><i class="bi bi-pencil"></i> Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3"><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 