@page
@model DashboardEmployeeModel
@{
    ViewData["Title"] = "Dashboard";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<div class="container py-5">
    <h2 class="fw-bold mb-5 text-primary"><i class="bi bi-house-door me-2"></i>Dashboard</h2>
    <div class="row mb-5 justify-content-center">
        <div class="col-md-3">
            <div class="card text-center p-4">
                <div class="dashboard-icon primary mb-3"><i class="bi bi-calendar-check"></i></div>
                <div class="fw-bold fs-2">@Model.DashboardData.TotalSchedules</div>
                <div class="text-secondary">Total schedules</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4">
                <div class="dashboard-icon success mb-3"><i class="bi bi-clipboard-check"></i></div>
                <div class="fw-bold fs-2">@Model.DashboardData.CheckedIn</div>
                <div class="text-secondary">Checked in</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4">
                <div class="dashboard-icon warning mb-3"><i class="bi bi-alarm"></i></div>
                <div class="fw-bold fs-2">@Model.DashboardData.Late</div>
                <div class="text-secondary">Late</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-4">
                <div class="dashboard-icon danger mb-3"><i class="bi bi-x-circle"></i></div>
                <div class="fw-bold fs-2">@Model.DashboardData.Absent</div>
                <div class="text-secondary">Absent</div>
            </div>
        </div>
    </div>
