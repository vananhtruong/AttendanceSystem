                    <span class="fw-bold fs-5">This Month's Salary</span>
                </div>
                <div class="fs-2 fw-bold text-success">@Model.DashboardData.SalaryThisMonth.ToString("N0") VND</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-4">
                <div class="d-flex align-items-center mb-2">
                    <div class="dashboard-icon info me-3"><i class="bi bi-bell"></i></div>
                    <span class="fw-bold fs-5">Latest Notifications</span>
                </div>
                <ul class="list-unstyled mb-0">
                    @foreach (var n in Model.DashboardData.Notifications)
                    {
                        <li class="mb-2">
                            <i class="bi bi-dot text-primary"></i>
                            <span>@n.Message</span>
                            <span class="text-secondary small ms-2">(@n.CreatedAt.ToString("dd/MM/yyyy"))</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div> *@
</div>
@section Scripts {
<script>
(function() {
    const params = new URLSearchParams(window.location.search);
    const token = params.get('token');
    if (token) {
        localStorage.setItem('accessToken', token);
        // Xóa token khỏi URL để bảo mật
        window.history.replaceState({}, document.title, window.location.pathname);
    }
})();
</script>
} 